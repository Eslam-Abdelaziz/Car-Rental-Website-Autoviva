                        <li>
                            @{
                                 string returnBranch = Request.ReturnBranch ?? Model.Branch.Name;
                            }
                            <span class="offer__list-name">Reutrn Branch</span>
                            <span class="offer__list-value offer__list-value--dark">@returnBranch</span>
                        </li>
                        <li>
                            @{
