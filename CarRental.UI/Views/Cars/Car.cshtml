@using CarRental.Data.Models.Entities;
@using CarRental.Application.Extenstions;
@model Car;
@{
    ViewData["Title"] = "Cars";

    bool NotNull = ViewBag.Request != null;
    IndexCarSearchReq Request = ViewBag.Request;
