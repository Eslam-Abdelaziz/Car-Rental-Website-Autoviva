                            <span>Rent now</span>

                        </a>
                    }else
                    {
                    <form asp-controller="Cars" asp-action="RentCar" asp-route-CarId ="@Model.Id" asp-route-PaymentType="0">
                            <button type="submit" value="submit" class="offer__rent">
                                <span>Rent now</span>
                            </button>
                    </form>
                  
                    }

    
