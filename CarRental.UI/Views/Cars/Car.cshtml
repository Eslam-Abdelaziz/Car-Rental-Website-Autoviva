                        <span class="offer__list-value">@Model.Color.Name.FirstCharToUpper()</span>
                    </li>
                    <li>
                        <span class="offer__list-name">Lease Branch</span>
                        <span class="offer__list-value">@Model.Branch.Name</span>
                    </li>
