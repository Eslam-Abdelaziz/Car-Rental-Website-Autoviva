@model ChangeEmailViewModel;
@{
    ViewData["Title"] = "Change Email";
}

<div class="home">
    <div class="home__bg"></div>

    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="home__content">
                    <div class="sign__content">
                        <form asp-controller="Auth" class="sign__form" asp-action="EmailConfirmation">
                            <div class="header__content" style="display: flex; justify-content: center;">
                                <div class="header__logo">
                                    <a asp-controller="Home" asp-action="index">
                                        <img src="~/img/logo-black.svg" alt="">
                                        <p style="text-align: center;"> Autoviva</p>
                                    </a>
                                </div>
                            </div>
                  
                            @if (Model.IsEmailChanged)
                            {
                                <span class="text-success" style="margin-left: 7px;margin-top:3px;">email has been changed to @Model.Email.</span>
                              

                            }
                            else
                            {
                                @Html.ValidationMessage("CustomError", new { @class = "text-danger"})
                             }
                            <a class="sign__btn" asp-controller="Account" asp-action="Settings">
                                Continue to Account Settings..
                            </a>


                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
