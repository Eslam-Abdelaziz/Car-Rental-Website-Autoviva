@using CarRental.Data.Models.Entities;
@model PaginatedList<Car>
@{
    ViewData["Title"] = "Account";
}
@{

    var prevDisabled = !Model.HasPreviousPage ? "pointer-events: none;" : "";
    var nextDisabled = !Model.HasNextPage ? "pointer-events: none;" : "";
}
<div class="container">
    <div class="row">
        <!-- breadcrumb -->
        <div class="col-12">
            <ul class="breadcrumbs">
                <li class="breadcrumbs__item"><a asp-controller="Home" asp-action="index">Home</a></li>
                <li class="breadcrumbs__item breadcrumbs__item--active">
                    My account
                </li>
            </ul>
        </div>
        <!-- end breadcrumb -->
        <!-- title -->
        <div class="col-12">
            <div class="main__title main__title--page">
                <h1>My account</h1>
            </div>
        </div>
        <!-- end title -->
    </div>

    <div class="row">
        <div class="col-12">
            <div class="profile">
                <!-- tabs nav -->
                <ul class="nav nav-tabs profile__tabs" id="profile__tabs" role="tablist">

                    <li class="nav-item" role="presentation">
                        <a asp-controller="Account" asp-action="Rentals">

                            <button class="" type="button"  aria-selected="true">
                                My Rentals
                            </button>
                        </a>
                    </li>
                    <li class="nav-item" role="presentation">
                        <a asp-controller="Account" asp-action="index">
                                <button  type="button"  aria-selected="true" class="active">
                                    Favorites
                                </button>
                         </a>
                       
                    </li>

                    <li class="nav-item" role="presentation">
                         <a asp-controller="Account" asp-action="Settings">
                            <button type="button" aria-selected="false" class="">
                                Settings
                            </button>
                             </a>
                    </li>

                    <li class="nav-item" role="presentation">
                        <a asp-controller="Account" asp-action="Billing">
                            <button type="button" aria-selected="false" class="">
                                Billing
                            </button>
                        </a>
                  
                    </li>
                </ul>
                <!-- end tabs nav -->
            </div>

            <!-- content tabs -->
            <div class="tab-content">


                <div class="tab-pane fade active show" id="tab-2" role="tabpanel" tabindex="0">
                    <div class="row">
                        @foreach (var car in Model)
                        {
                            car.IsFavourite = true;
                            @await Component.InvokeAsync("Car", car)

                        }

                    </div>

                    <!-- paginator -->
                    <div class="row">
                        <div class="col-12">
                            <div class="paginator">
                                <span class="paginator__pages">@Model.PageIndex from @Model.TotalPages</span>

                                <ul class="paginator__list-mobile">
                                    <li>
                                        <a asp-action="Index" asp-route-page="@(Model.PageIndex - 1)" style="@prevDisabled">
                                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                                <path d="M17,11H9.41l3.3-3.29a1,1,0,1,0-1.42-1.42l-5,5a1,1,0,0,0-.21.33,1,1,0,0,0,0,.76,1,1,0,0,0,.21.33l5,5a1,1,0,0,0,1.42,0,1,1,0,0,0,0-1.42L9.41,13H17a1,1,0,0,0,0-2Z"></path>
                                            </svg>
                                            <span>Prev</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a asp-action="Index" asp-route-page="@(Model.PageIndex + 1)" style="@nextDisabled">
                                            <span>Next</span>
                                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                                <path d="M17.92,11.62a1,1,0,0,0-.21-.33l-5-5a1,1,0,0,0-1.42,1.42L14.59,11H7a1,1,0,0,0,0,2h7.59l-3.3,3.29a1,1,0,0,0,0,1.42,1,1,0,0,0,1.42,0l5-5a1,1,0,0,0,.21-.33A1,1,0,0,0,17.92,11.62Z"></path>
                                            </svg>
                                        </a>
                                    </li>
                                </ul>

                                <ul class="paginator__list">
                                    <li>
                                        <a asp-action="Index" asp-route-page="@(Model.PageIndex - 1)" style="@prevDisabled">
                                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                                <path d="M17,11H9.41l3.3-3.29a1,1,0,1,0-1.42-1.42l-5,5a1,1,0,0,0-.21.33,1,1,0,0,0,0,.76,1,1,0,0,0,.21.33l5,5a1,1,0,0,0,1.42,0,1,1,0,0,0,0-1.42L9.41,13H17a1,1,0,0,0,0-2Z"></path>
                                            </svg>
                                            <span>Prev</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a asp-action="Index" asp-route-page="@(Model.PageIndex + 1)" style="@nextDisabled">
                                            <span>Next</span>
                                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                                <path d="M17.92,11.62a1,1,0,0,0-.21-.33l-5-5a1,1,0,0,0-1.42,1.42L14.59,11H7a1,1,0,0,0,0,2h7.59l-3.3,3.29a1,1,0,0,0,0,1.42,1,1,0,0,0,1.42,0l5-5a1,1,0,0,0,.21-.33A1,1,0,0,0,17.92,11.62Z"></path>
                                            </svg>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <!-- end paginator -->
                </div>




            </div>
            <!-- end content tabs -->
        </div>
    </div>
</div>