@model SignUpViewModel;
@{
    ViewData["Title"] = "Sign Up ";
}


<div class="home">
    <div class="home__bg"></div>

    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="home__content">
                    <div class="sign__content">
                        <form asp-controller="Auth" class="sign__form" asp-action="SignUp" asp-route-ReturnUrl="@Model.ReturnUrl">
                            <div class="header__content" style="display: flex; justify-content: center;">
                                <div class="header__logo">
                                    <a asp-controller="Home" asp-action="index">
                                        <img src="~/img/logo-black.svg" alt="">
                                        <p style="text-align: center;"> Autoviva</p>
                                    </a>
                                </div>
                            </div>
                            <div class="sign__group">
                                <input type="text" name="firstname" class="sign__input" placeholder="First Name">
                                <span class="text-danger" style="margin-left: 7px;margin-top:3px;" asp-validation-for="FirstName"></span>

                            </div>
                            <div class="sign__group">
                                <input type="text" name="lastname" class="sign__input" placeholder="Last Name">
                                <span class="text-danger" style="margin-left: 7px;margin-top:3px;" asp-validation-for="LastName"></span>

                            </div>
                            <div class="sign__group">
                                <input type="text" name="email" class="sign__input" placeholder="Email Address">
                                <span class="text-danger" style="margin-left: 7px;margin-top:3px;" asp-validation-for="Email"></span>

                            </div>
                            <div class="sign__group">
                                <input type="password" name="password" class="sign__input" placeholder="Password">
                                <span class="text-danger" style="margin-left: 7px;margin-top:3px;" asp-validation-for="Password"></span>

                            </div>
                      @*      <div class="sign__group sign__group--checkbox">
                                <input id ="" value="true" name="AgreeToPrivacyPolicy" type="checkbox">
                                <label for="privacy">I agree to the <a asp-controller="Home" asp-action="privacy">Privacy Policy</a></label>
                                <span class="text-danger" style="margin-left: 7px;margin-top:3px;" asp-validation-for="AgreeToPrivacyPolicy"></span>

                            </div>*@
                            <div class="sign__group sign__group--checkbox">
                                <div>
                                    @Html.CheckBoxFor(m => m.AgreeToPrivacyPolicy)
                                    @Html.LabelFor(m => m.AgreeToPrivacyPolicy, "I agree to the ")
                                    <a asp-controller="Home" asp-action="privacy">Privacy Policy</a>;
                                </div>

                            </div>
                            <span class="text-danger" style="margin-left: 7px;margin-top:3px;" asp-validation-for="AgreeToPrivacyPolicy"></span>

                            @Html.ValidationMessage("SignUpFailed", new { @class = "text-danger", @style = "margin-top: 0px;" })

                            <button class="sign__btn" type="submit" value="submit"><span>Sign up</span></button>
                            <span class="sign__delimiter">or</span>
                            <div class="sign__social">
                                <a class="fb" asp-controller="Auth"  asp-action="ExternalLogin" asp-route-Providor="Google">
                                    <svg viewBox="0 0 9 17" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M5.56341 16.8197V8.65888H7.81615L8.11468 5.84663H5.56341L5.56724 4.43907C5.56724 3.70559 5.63693 3.31257 6.69042 3.31257H8.09873V0.5H5.84568C3.1394 0.5 2.18686 1.86425 2.18686 4.15848V5.84695H0.499939V8.6592H2.18686V16.8197H5.56341Z"></path>
                                    </svg>
                                </a>
            
                                <a class="gl" asp-controller="Auth" asp-action="ExternalLogin" asp-route-Providor="Google" asp-route-returnUrl="@Model.ReturnUrl">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="ionicon" viewBox="0 0 512 512">
                                        <path d="M473.16 221.48l-2.26-9.59H262.46v88.22H387c-12.93 61.4-72.93 93.72-121.94 93.72-35.66 0-73.25-15-98.13-39.11a140.08 140.08 0 01-41.8-98.88c0-37.16 16.7-74.33 41-98.78s61-38.13 97.49-38.13c41.79 0 71.74 22.19 82.94 32.31l62.69-62.36C390.86 72.72 340.34 32 261.6 32c-60.75 0-119 23.27-161.58 65.71C58 139.5 36.25 199.93 36.25 256s20.58 113.48 61.3 155.6c43.51 44.92 105.13 68.4 168.58 68.4 57.73 0 112.45-22.62 151.45-63.66 38.34-40.4 58.17-96.3 58.17-154.9 0-24.67-2.48-39.32-2.59-39.96z"></path>
                                    </svg>
                                </a>
                            </div>
                            <span class="sign__text">Already have an account? <a asp-controller="Auth" asp-action="Login">Sign in!</a></span>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>