@using CarRental.Data.Models.Entities;
@model Payment;

@{
    ViewData["Title"] = "Payment Failed";
}


<div class="home">
    <div class="home__bg"></div>

    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="home__content">
                    <div class="sign__content">

                        <form  class="sign__form">
                            <div class="header__content" style="display: flex; justify-content: center;">
                                <div class="header__logo">
                                    <a href="/">
                                        <img src="/img/logo-black.svg" alt="">
                                        <p style="text-align: center;"> Autoviva</p>
                                    </a>
                                </div>
                            </div>

                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="custom-svg">
                                <path d="M0 0h24v24H0z" fill="none" />
